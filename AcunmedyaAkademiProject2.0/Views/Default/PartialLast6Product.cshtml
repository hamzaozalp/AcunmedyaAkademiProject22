@model List<AcunmedyaAkademiProject2._0.Entities.Product>

<div class="cream_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="cream_taital">Öne Çıkan Tatlılarımız</h1>
                <p class="cream_text">Misafirlerimizin en beğendiği tatlılar</p>
            </div>
        </div>
        <div class="cream_section_2">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="cream_box">
                            <div class="cream_img"><img src="@item.ImageUrl" style="width:500px;height:250px;"></div>
                            <div class="price_text">₺@item.Price</div>
                            <h6 class="strawberry_text">@item.ProductName</h6>
                            <div class="cart_bt">
                                <a href="javascript:void(0)" onclick="showProductDetails('@item.ProductName', '@item.Price', '@item.ImageUrl', '@item.Description')">Ürün Detayları</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="seemore_bt"><a href="/Product/ProductList/">Tüm Ürün Listesi</a></div>
    </div>
</div>

<!-- ✅ Modal Penceresi -->
<div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="productDetails"></p>
            </div>
        </div>
    </div>
</div>

<!-- ✅ JavaScript -->
<script>
    function showProductDetails(name, price, imageUrl, description) {
        // Açıklama boşsa varsayılan bir metin göster
        description = description && description.trim() ? description : "Bu tatlı hakkında açıklama bulunamadı.";

        document.getElementById("productTitle").innerText = name;
        document.getElementById("productDetails").innerHTML =
            `<strong>Fiyat:</strong> ₺${price} <br><br>
            <img src="${imageUrl}" style="width: 100%; height: auto;"> <br><br>
            <strong>Açıklama:</strong> ${description}`;

        new bootstrap.Modal(document.getElementById("productModal")).show();
    }
</script>